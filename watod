set -euo pipefail

programname="$(basename "$(test -L "$0" && readlink "$0" || echo "$0")")"
MONO_DIR="$(cd -- "$(dirname -- "$(realpath "$0")")" && pwd)"
MODULES_DIR="$MONO_DIR/modules"

# ANSI color codes
readonly BLUE='\033[0;34m'
readonly GREEN='\033[0;32m'
readonly CYAN='\033[0;36m'
readonly YELLOW='\033[0;33m'
readonly RESET='\033[0m'
readonly BOLD='\033[1m'

# Always arrays → safe to expand with "${arr[@]}"
declare -a MODULES=()
declare -a COMPOSE_CMD=()

usage() {
  cat <<EOF
Usage: $programname [OPTIONS]... [COMMAND]...

Executes 'docker compose COMMAND' in the monorepo with the correct
compose files and environment variables.

Options
  -v, --verbose               Print env setup output
  -t, --terminal SERVICE      Run 'docker compose up -d' (if needed) and open
                              a bash shell in the SERVICE container
  -h, --help                  Show this help and exit

Commands
  test [SERVICE]...           Run colcon test in specified service(s)
                              If no SERVICE specified, runs in all services
  bag <ros2-bag-args>...      Run ros2 bag commands (record/play/info/etc)
                              Runs in ./bags directory with auto-mounting

Examples
  watod up                    # docker compose up
  watod ps --services         # docker compose ps --services
  watod --all build           # docker compose build for all modules
  watod -t perception         # open a shell in the 'perception' service
  watod test                  # run tests in all services
  watod test perception       # run tests only in perception service
  watod bag record -a         # record all topics (auto-saves to ./bags)
  watod bag play my_bag       # play bag from ./bags directory
  watod bag info my_bag       # show bag info

More info: https://docs.docker.com/compose/reference/overview/
EOF
}

build_modules_array() {
  local -n modules_array=$1  # nameref to the array to populate
  local modules_dir=${2:-$MODULES_DIR}
  local blacklist=${3:-""}  # space-separated list of modules to exclude

  modules_array=()

  # shellcheck source=/dev/null
  source "$modules_dir/.env"    # must define $ACTIVE_MODULES

  # Ensure ACTIVE_MODULES is an array
  if [[ ! ${ACTIVE_MODULES@a} =~ a ]]; then
    read -ra ACTIVE_MODULES <<<"${ACTIVE_MODULES[*]}"
  fi

  for m in "${ACTIVE_MODULES[@]}"; do
    # Skip if module is in blacklist
    if [[ -n "$blacklist" && " $blacklist " =~ \ $m\  ]]; then
      continue
    fi
    modules_array+=( -f "$modules_dir/docker-compose.${m}.yaml" )
  done
}

run_compose() {
  cd "$MONO_DIR"

  # Build the list of -f <file> arguments once
  if [[ -z ${MODULES_BUILT:-} ]]; then
    MODULES_BUILT=1
    build_modules_array MODULES "$MODULES_DIR"
  fi

  echo "Running: docker compose ${MODULES[*]} ${COMPOSE_CMD[*]}"
  DOCKER_BUILDKIT=${DOCKER_BUILDKIT:-1} \
    COMPOSE_BAKE=${COMPOSE_BAKE:-true} \
    docker compose "${MODULES[@]}" "${COMPOSE_CMD[@]}"
}

down_compose() {
  cd "$MONO_DIR"

  # Build the list of -f <file> arguments if not already built
  if [[ -z ${MODULES_BUILT:-} ]]; then
    MODULES_BUILT=1
    build_modules_array MODULES "$MODULES_DIR"
  fi

  DOCKER_BUILDKIT=${DOCKER_BUILDKIT:-1} \
    COMPOSE_BAKE=${COMPOSE_BAKE:-true} \
    docker compose "${MODULES[@]}" down
}

# ─────────────────────────── Argument parsing ────────────────────────────

[[ $# -eq 0 ]] && usage && exit 0

while [[ $# -gt 0 ]]; do
  case $1 in
    -v|--verbose)
      VERBOSE=1
      shift
      ;;
    -t|--terminal)
      START_TERMINAL=1
      shift
      SERVICE_NAME=${1:-}
      [[ -z $SERVICE_NAME ]] && { echo "Missing service name after -t"; usage; }
      shift
      ;;
    -h|--help|help)
      usage; exit 0 ;;
    test)
      RUN_TESTS=1
      shift
      # Collect service names if provided
      declare -a TEST_SERVICES=()
      while [[ $# -gt 0 && ! "$1" =~ ^- ]]; do
        TEST_SERVICES+=("$1")
        shift
      done
      break ;;
    bag)
      RUN_BAG=1
      shift
      # Pass all remaining arguments to watod-bag.sh
      BAG_ARGS=( "$@" )
      break ;;
    *)  # first non‑option → rest is docker‑compose cmd
      break ;;
  esac
done

# The remaining CLI words are the compose sub‑command and its flags
COMPOSE_CMD=( "$@" )

# ─────────────────────────── Environment setup ───────────────────────────

# Local overrides
[[ -f "$MONO_DIR/watod-config.local.sh" ]] && source "$MONO_DIR/watod-config.local.sh"
[[ -f "$MONO_DIR/watod-config.sh"       ]] && source "$MONO_DIR/watod-config.sh"

# Mode of operation (deploy vs develop overrides)
# Also need to be in develop mode to run tests
MODE_OF_OPERATION=${MODE_OF_OPERATION:-deploy}
if [[ $MODE_OF_OPERATION == develop || -n ${RUN_TESTS:-} ]]; then
  MODULES_DIR="$MONO_DIR/modules/dev_overrides"
fi

# Generate .env via helper script
if [[ -n ${VERBOSE:-} ]]; then
    pushd "$MONO_DIR" > /dev/null
    source ./watod_scripts/watod-setup-env.sh          # env vars persist
    popd > /dev/null
else
    pushd "$MONO_DIR" > /dev/null
    source ./watod_scripts/watod-setup-env.sh &>/dev/null
    popd > /dev/null
fi

# ────────────────────────────── Run Tests ────────────────────────────────

if [[ -n ${RUN_TESTS:-} ]]; then
  # First, build all services in dev mode to ensure images are up-to-date
  echo "Building images before running tests..."
  COMPOSE_CMD=( build )
  run_compose

  # For tests, rebuild modules array with dev_overrides but exclude simulation and infrastructure
  TEST_MODULES=()

  # shellcheck source=/dev/null
  source "$MODULES_DIR/.env"    # must define $ACTIVE_MODULES

  # Ensure ACTIVE_MODULES is an array
  if [[ ! ${ACTIVE_MODULES@a} =~ a ]]; then
    read -ra ACTIVE_MODULES <<<"${ACTIVE_MODULES[*]}"
  fi

  # Build test modules array, excluding simulation and infrastructure
  for m in "${ACTIVE_MODULES[@]}"; do
    if [[ "$m" != "simulation" && "$m" != "infrastructure" ]]; then
      TEST_MODULES+=( -f "$MODULES_DIR/docker-compose.${m}.yaml" )
    fi
  done

  # Call the test script with modules array as arguments
  if [[ ${#TEST_SERVICES[@]} -gt 0 ]]; then
    "$MONO_DIR/watod_scripts/watod-test.sh" "${TEST_MODULES[@]}" "${TEST_SERVICES[@]}"
  else
    "$MONO_DIR/watod_scripts/watod-test.sh" "${TEST_MODULES[@]}"
  fi
  exit $?
fi

# ────────────────────────────── Run Bag ──────────────────────────────

if [[ -n ${RUN_BAG:-} ]]; then
  # Export variables needed by watod-bag.sh
  export MONO_DIR MODULES_DIR BAG_DIRECTORY INFRASTRUCTURE_IMAGE TAG
  "$MONO_DIR/watod_scripts/watod-bag.sh" "${BAG_ARGS[@]}"
  exit $?
fi

# ─────────────────────────── Execute compose ─────────────────────────────

cleanup() {
  echo ""
  echo -ne "\r${BLUE}${BOLD}Stopping containers...${RESET}   "

  # Spinner animation
  local spin=('⠋' '⠙' '⠹' '⠸' '⠼' '⠴' '⠦' '⠧' '⠇' '⠏')
  local i=0

  # Run docker compose down in background
  down_compose &> /dev/null &
  local cleanup_pid=$!

  # Show spinner while cleanup is running
  while kill -0 $cleanup_pid 2>/dev/null; do
    echo -ne "\r${BLUE}${BOLD}Stopping containers...${RESET} ${spin[$i]} "
    i=$(( (i+1) % ${#spin[@]} ))
    sleep 0.1
  done

  echo -e "\r${GREEN}✓ All containers stopped.${RESET}    "
  exit 0
}

if [[ ${#COMPOSE_CMD[@]} -gt 0 ]]; then
  # If opening a terminal via `-t`, ensure containers are up in detached mode
  if [[ -n ${START_TERMINAL:-} && "${COMPOSE_CMD[*]}" =~ \bup\b && ! "${COMPOSE_CMD[*]}" =~ -d ]]; then
    COMPOSE_CMD+=( -d )
  fi

  # Special handling for 'up' command
  if [[ "${COMPOSE_CMD[0]}" == "up" ]]; then
    # Set up trap for Ctrl+C on 'up' command
    trap cleanup SIGINT SIGTERM

    echo ""
    echo -e "${BLUE}╔═══════════════════════════════════════════════════════════╗${RESET}"
    echo -e "${BLUE}║${RESET}  ${BOLD}Starting WATonomous Services${RESET}                             ${BLUE}║${RESET}"
    echo -e "${BLUE}╠═══════════════════════════════════════════════════════════╣${RESET}"
    echo -e "${BLUE}║${RESET}  ${GREEN}Foxglove:${RESET}    ${CYAN}ws://localhost:${FOXGLOVE_BRIDGE_PORT}${RESET}                        ${BLUE}║${RESET}"
    echo -e "${BLUE}║${RESET}  ${GREEN}Log Viewer:${RESET}  ${CYAN}http://localhost:${LOG_VIEWER__PORT}${RESET}                      ${BLUE}║${RESET}"
    echo -e "${BLUE}╠═══════════════════════════════════════════════════════════╣${RESET}"
    echo -e "${BLUE}║${RESET}  ${YELLOW}View container logs at the Log Viewer URL above.${RESET}         ${BLUE}║${RESET}"
    echo -e "${BLUE}║${RESET}  Press ${BOLD}Ctrl+C${RESET} to stop all services.                       ${BLUE}║${RESET}"
    echo -e "${BLUE}╚═══════════════════════════════════════════════════════════╝${RESET}"
    echo ""

    run_compose &> /dev/null &
    wait $!
  else
    run_compose
  fi
fi

# Open interactive shell if requested
if [[ -n ${START_TERMINAL:-} ]]; then
  echo "Starting bash shell in service '$SERVICE_NAME'..."
  run_compose exec "$SERVICE_NAME" /bin/bash
fi
