<?xml version="1.0"?>
<robot name="eve_kia_soul_ev" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Base link (root of the robot) -->
  <link name="base_link"/>

  <!-- Include chassis -->
  <xacro:include filename="eve_chassis.xacro"/>

  <!-- Instantiate chassis with position relative to base_link -->
  <xacro:chassis parent="base_link">
    <origin xyz="-0.8629 0 0" rpy="0 0 0"/>
  </xacro:chassis>

  <!-- Include roof mount and sensors -->
  <xacro:include filename="eve_roof_mount.xacro"/>

  <!-- Instantiate roof mount with position relative to chassis -->
  <xacro:roof_mount parent="base_link">
    <origin xyz="0 0 1.76" rpy="0 0 0"/>
  </xacro:roof_mount>

  <!-- Include mirror mounts and sensors -->
  <xacro:include filename="eve_mirror_mount_left.xacro"/>
  <xacro:include filename="eve_mirror_mount_right.xacro"/>

  <xacro:mirror_mount_left parent="base_link">
    <origin xyz="0.95 0.88 1.26" rpy="0 0 0"/>
  </xacro:mirror_mount_left>

  <xacro:mirror_mount_right parent="base_link">
    <origin xyz="0.95 -0.88 1.26" rpy="0 0 0"/>
  </xacro:mirror_mount_right>

</robot>
